<div class = "d-flex flex-column align-items-center pt-4" style="min-height:100vh;background-image:url('/img/bgFooter.jpg');background-repeat: no-repeat;background-position: center;background-size: cover;">
    <div class="container">
        <h2>Lista de Cartegorias</h2>
        <hr>
        {{#each cartegorias}}
        <div class="card text-white bg-dark my-2 mx-2" style="width: 30%; display:inline-block;">
            <div class="card-body">
                <h4>{{nome}}</h4>
                <small>{{slug}}</small>
                <br>
                <small style="font-size: 12px;">{{Data}}</small>
                <br>
                <a href="/admin/cartegorias/remove/{{_id}}"><button class="btn btn-danger mx-2 mt-3">Remover</button></a>
                <a href="/admin/cartegorias/edit/{{_id}}"><button class="btn btn-warning mx-2 mt-3">Alterar</button></a>
            </div>
        </div>
        {{else}}
            <h4 class="mt-4">Nenhuma cartegoria Registrada</h4>
        {{/each}}
        <br>
        <a href ="/admin/newcartegory"><button class = "btn btn-success my-5 ml-4">Nova Cartegoria</button></a>
    </div>
</div>