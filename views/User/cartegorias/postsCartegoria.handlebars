<div class="container mt-5" style="min-height: 100vh;">
<h3 class="text-center">Posts relacionados a {{cartegoria.nome}}:</h3>
        {{#each post}}
        <div class="card my-2 mx-2" style="width: 100%; display:inline-block;">
            <div class="card-body text-start">
                <h4 class="text-center">{{title}}</h4>
                <hr style="width: 30%;" class="mx-auto">
                <small><strong>{{cartegory.nome}}</strong></small>
                <br>
                <p>{{description}}</p>
                <br>
                <small>{{date}}</small>
                <br>
                <div class="text-center">
                    <a href="/posts/{{slug}}"><button class="btn btn-dark">Leia Mais</button></a>
                </div>
                
            </div>
        </div>
        {{else}}
        <h6 class="text-center mt-5">Esta cartegoria ainda n√£o tem nenhum post</h6>
        {{/each}}
</div>